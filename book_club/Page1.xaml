<Page x:Class="book_club.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:book_club"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <StackPanel Margin="10">
            <DataGrid x:Name="OrderGrid" AutoGenerateColumns="True" Height="350" />
            <Button Content="Редактировать заказ" Width="200" Height="40" Margin="5" Click="EditOrder_Click"/>
        </StackPanel>
    </Grid>
</Page>
